<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">

        <% if flash[:alert] %>
            <div class="alert alert-warning"><%= flash[:alert] %></div>
        <% end %>

      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: covid19_country_path, method: 'get', local: true) do %>
          <div class="form-group">
            <h2>Search for Covid19 results<h2>
            <select class='search_country form-control' id="country" name="country">
            <% if !@allCountry.nil? %>
              <% @allCountry.each do |country| %>
                  <option>
                      <%= country['name'] %>
                  </option>
              <% end %>
            <% end %>
            </select>
          </div>    
          <%= submit_tag 'Search', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
    
  </div>
</div>


